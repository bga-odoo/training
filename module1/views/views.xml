<odoo>

        <record model="ir.ui.view" id="acedemy_tree_view">
            <field name="name">academy_tree</field>
            <field name="model">openacademy</field>
            <field name="arch" type="xml">
                <tree string="Academy Tree">
                            <field name="name"/>
                            <field name="description"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="academy_form_view">
            <field name="name">academy_form</field>
            <field name="model">openacademy</field>
            <field name="arch" type="xml">
                <form string="Academy Form">
                    <sheet>
                        <group>
                            <h1>
                                <field name="name"/>
                            </h1>
                        </group>
                        <group>
                            <group>
                                <field name="description"/>
                            </group>
                            <group>
                                <field name="full_description"/>
                                <field name="tag_ids" widget="many2many_tags"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="academy_search_view">
            <field name="name">academy.search</field>
            <field name="model">openacademy</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="description"/>
                    <field name="tag_ids"/>
                </search>
            </field>
        </record>

        <record model="ir.ui.view" id="course_form_view">
            <field name="name">course_form</field>
            <field name="model">course</field>
            <field name="arch" type="xml">
                <form string="Course Form">
                    <sheet>
                        <group>
                            <h1>
                                <field name="name"/>
                            </h1>
                        </group>
                        <group>
                            <group>
                                <field name="responsible_id"/>
                                <field name="description"/>
                            </group>
                            <group>
                                <field name="tag_ids" widget="many2many_tags"/>
                            </group>
                        </group>
                        <notebook colspan="4">
                            <page string="Sessions">
                                <group>
                                    <field name="session_ids">
                                        <tree>
                                            <field name="name"/>
                                            <field name="date"/>
                                            <field name="academy_id"/>
                                        </tree>
                                    </field>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>


        <record model="ir.ui.view" id="session_form_view">
            <field name="name">session_form</field>
            <field name="model">session</field>
            <field name="arch" type="xml">
                <form string="Session Form">
                    <sheet>
                        <group>
                            <h1>
                                <field name="name"/>
                            </h1>
                        </group>
                        <group>
                            <group>
                                <field name="date"/>
                                <field name="start_date"/>
                                <field name="course_id"/>
                                <field name="instructor_id" domain="['|',('instructor', '=', True),('category_id.name', 'ilike', 'Teacher')]"/>
                            </group>
                            <group>
                                <field name="seats"/>
                                <field name="taken_seats" widget="progressbar"/>
                                <field name="duration"/>
                            </group>
                        </group>
                        <notebook colspan="4">
                            <page string="Attendees">
                                <group>
                                    <field name="attendee_ids">
                                        <tree>
                                            <field name="name"/>
                                            <field name="phone"/>
                                            <field name="email"/>
                                        </tree>
                                    </field>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>




</odoo>